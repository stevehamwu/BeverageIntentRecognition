# Example environment configuration file
# Copy this file to .env and modify as needed

# API Configuration
DRINK_API_API_VERSION=1.0.0
DRINK_API_API_TITLE="Drink Intent Recognition API"
DRINK_API_HOST=0.0.0.0
DRINK_API_PORT=8080
DRINK_API_WORKERS=1

# LLM Service Configuration
DRINK_API_LLM_API_BASE=http://10.109.214.243:8000/v1
DRINK_API_LLM_API_KEY=EMPTY
DRINK_API_MODEL_ID=Qwen3-8B
DRINK_API_LLM_TIMEOUT=30
DRINK_API_LLM_MAX_RETRIES=2

# Cache Configuration
DRINK_API_CACHE_TTL=3600
# DRINK_API_REDIS_URL=redis://localhost:6379/0
DRINK_API_REDIS_HOST=localhost
DRINK_API_REDIS_PORT=6379
DRINK_API_REDIS_DB=0
# DRINK_API_REDIS_PASSWORD=your_password

# Rate Limiting
DRINK_API_RATE_LIMIT=100
DRINK_API_RATE_LIMIT_BURST=20

# Logging Configuration
DRINK_API_LOG_LEVEL=INFO
DRINK_API_LOG_FORMAT=json
# DRINK_API_LOG_FILE=/app/logs/api.log

# Performance Configuration
DRINK_API_MAX_BATCH_SIZE=50
DRINK_API_REQUEST_TIMEOUT=60
DRINK_API_MAX_CONCURRENT_REQUESTS=100

# Security Configuration
DRINK_API_CORS_ORIGINS=["*"]
DRINK_API_CORS_METHODS=["GET", "POST"]
# DRINK_API_ALLOWED_IPS=["127.0.0.1", "10.0.0.0/8"]

# Monitoring Configuration
DRINK_API_ENABLE_METRICS=true
DRINK_API_METRICS_PORT=8081
DRINK_API_HEALTH_CHECK_INTERVAL=30

# Testing Configuration
DRINK_API_TEST_MODE=false
DRINK_API_MOCK_LLM_RESPONSES=false